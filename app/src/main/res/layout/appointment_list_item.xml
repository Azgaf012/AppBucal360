<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/appointment_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/primary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appointment_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointment_doctor"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/editar_cita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_pencil"
            app:tint="@color/edit_icon" />

        <ImageButton
            android:id="@+id/eliminar_cita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editar_cita"
            android:layout_alignParentEnd="true"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_trash"
            app:tint="@color/delete_icon" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

