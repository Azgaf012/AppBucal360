<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/editDoctorImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/doctor"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp" />



    <TextView
        android:id="@+id/editInfoDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Información del doctor"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="60dp" />

    <EditText
        android:id="@+id/editNameDoctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:textColorHint="@color/hint_color"
        android:textSize="16sp"
        android:layout_marginBottom="25dp" />

    <EditText
        android:id="@+id/editLastNameDoctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellido"
        android:textColorHint="@color/hint_color"
        android:textSize="16sp"
        android:layout_marginBottom="25dp" />

    <EditText
        android:id="@+id/editstartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora inicio"
        android:textColorHint="@color/hint_color"
        android:textSize="16sp"
        android:layout_marginBottom="25dp" />

    <EditText
        android:id="@+id/editEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora fin"
        android:textColorHint="@color/hint_color"
        android:textSize="16sp"
        android:layout_marginBottom="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <CheckBox
            android:id="@+id/editmondayCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunes"
            android:textSize="15sp"
            android:textColor="@color/checkbox_text_color"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/edittuesdayCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Martes"
            android:textSize="15sp"
            android:textColor="@color/checkbox_text_color"
            android:layout_weight="1"
            android:layout_marginStart="16dp" />

        <CheckBox
            android:id="@+id/editwednesdayCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miércoles"
            android:textSize="15sp"
            android:textColor="@color/checkbox_text_color"
            android:layout_weight="1"
            android:layout_marginStart="16dp" />

        <CheckBox
            android:id="@+id/editthursdayCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jueves"
            android:textSize="15sp"
            android:textColor="@color/checkbox_text_color"
            android:layout_weight="1"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <CheckBox
            android:id="@+id/editfridayCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viernes"
            android:textSize="15sp"
            android:textColor="@color/checkbox_text_color"
            android:layout_weight="1"
            android:layout_marginStart="16dp" />

        <CheckBox
            android:id="@+id/editsaturdayCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sábado"
            android:textSize="15sp"
            android:textColor="@color/checkbox_text_color"
            android:layout_weight="1"
            android:layout_marginStart="16dp" />

        <CheckBox
            android:id="@+id/editsundayCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domingo"
            android:textSize="15sp"
            android:textColor="@color/checkbox_text_color"
            android:layout_weight="1"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/editEnabledCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habilitado"
        android:textSize="15sp"
        android:textColor="@color/checkbox_text_color"
        android:layout_marginTop="16dp" />

</LinearLayout>